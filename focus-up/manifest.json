{
    "manifest_version": 3,
    "name": "Samurai Focus",
    "version": "2.1",
    "description": "A focus timer and productivity tool",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.jpg",
        "48": "icons/icon48.jpg",
        "128": "icons/icon128.jpg"
      }
    },
    "icons": {
        "16": "icons/icon16.jpg",
        "48": "icons/icon48.jpg",
        "128": "icons/icon128.jpg"
    },
    "permissions": ["notifications", "storage"],
    "background": {
      "service_worker": "background.js"
    }
}